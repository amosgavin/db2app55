    <mapping>
      <!--平台自带-->
      <property name="com.ai.appframe2.complex.self.dao.base" value="base"/>
      <property name="com.ai.appframe2.complex.self.service.check" value="base"/>
      <!--secframe-->
      <property name="com.ai.secframe" value="sec"/>
      <property name="com.ai.frame" value="sec"/>
      <property name="com.ai.common.dao" value="base"/>
      <!--业务-->
      <property name="com.asiainfo.charge" value="hbsale"/>
      <property name="com.asiainfo.sale" value="hbsale"/>
      <property name="com.asiainfo.task" value="hbsale"/>
      <property name="com.asiainfo.workflow" value="hbsale"/>
      <property name="com.asiainfo.bi" value="hbsale"/>
      <property name="com.asiainfo.costWarn" value="hbsale"/>
